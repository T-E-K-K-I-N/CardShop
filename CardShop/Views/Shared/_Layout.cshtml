<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CardShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CardShop.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/backImage.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/card.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/label.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/menu.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/paragraph.css" asp-append-version="true"/>
</head>
<body class="backgroundImage">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-black border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CardShop.ru</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light paragraphLayout" asp-area="" asp-controller="Home" asp-action="Index">На главную</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light paragraphLayout" asp-area="" asp-controller="GraphicsCard" asp-action="GetGraphicsCards">Каталог</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light paragraphLayout" asp-area="" asp-controller="Home" asp-action="Privacy">AMD</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light paragraphLayout" asp-area="" asp-controller="Home" asp-action="Privacy">Nvidia</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle paragraphLayout active text-white" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="font-family:Arial; font-weight: bold">Аккаунт</a>
                                <div class="dropdown-menu">
                                    <div class="container">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <ul class="nav flex-column paragraphHome">
                                                    <li class="nav-item text-center">
                                                        <a class="nav-link active text-white" asp-controller="Account" asp-action="Register">Регистрация</a>
                                                    </li>
                                                    <li class="nav-item text-center">
                                                        <a class="nav-link active text-white" asp-controller="Account" asp-action="Login">Вход</a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light paragraphLayout" asp-area="" asp-controller="Home" asp-action="Index">На главную</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light paragraphLayout" asp-area="" asp-controller="GraphicsCard" asp-action="GetGraphicsCards">Каталог</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light paragraphLayout" asp-area="" asp-controller="Home" asp-action="Privacy">AMD</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light paragraphLayout" asp-area="" asp-controller="Home" asp-action="Privacy">Nvidia</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle paragraphLayout active text-white" href="#" data-toggle="dropdown">Аккаунт</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("pageScripts", required: false)
</body>
</html>
