@model List<CardShop.Domain.Models.GraphicsCard>


@{
	ViewBag.Title = "Каталог видеокарт";
	Layout = "_Layout";
}

<style>
	.card-buttons-group {
		text-align: right;
		padding: 10px;
	}
</style>

<div class="card-buttons-group">
	<button class="btn btn-warning" id="hideGraphicsCardID">Скрыть</button>
	<button class="btn btn-warning" id="showGraphicsCardID">Показать</button>
</div>

<div style="padding: 10px;"></div>
@if (Model.Count == 0)
{
    <div class="card col-md-12">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="https://images.wallpaperscraft.ru/image/single/bmw_fary_podsvetka_137326_1280x720.jpg" 
                     class="img-fluid rounded-start rounded">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title text-center">Список видеокарт пуст</h5>
                    <p class="card-text">
                        Список пополниться позже, не расстраивайтесь
                    </p>
                </div>
            </div>
        </div>
    </div>
    <div style="padding: 10px;"></div>
    <div class="card text-center">
        <div class="card-header">
            <ul class="nav nav-pills card-header-pills">
                <li class="nav-item">
                    <a class="nav-link active" href="#">Active</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Link</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
                </li>
            </ul>
        </div>
        <div class="card-body">
            <h5 class="card-title">Special title treatment</h5>
            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
            <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
    </div>
}
else
{
    <div class="row">
        @foreach (var card in Model)
        {
            <div class="row row-cols-1 col-md-4 text-center">
                <div class="col" style="padding: 10px;">
                    <div class="card">
                        <img src="https://mark.com.ru/wa-data/public/shop/products/48/91/39148/images/41843/41843.200.jpeg" class="card-img-top" alt="@card.Title">
                        <div class="card-body">
                            <h5 class="card-title">@card.Title</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">@card.Description</p>
                        </div>
                        <div class="card-body">
                            <p class="card-text">Стоимость: @card.Price ₽</p>
                        </div>
                        <div class="card-body">
                            <p class="card-text">Производитель: @card.Manufacturer</p>
                        </div>
                        <div class="card-body">
                            <a asp-action="GetGraphicsCard" asp-route-id="@card.Id" class="card-link">Подробнее</a>
                            @if (User.IsInRole("Admin"))
                            {
                                <hr/>
                                <a asp-controller="GraphicsCard" asp-action="Delete" asp-route-id="@card.Id" class="btn btn-danger">Удалить</a>
                                <a asp-controller="GraphicsCard" asp-action="Save" asp-route-id="@card.Id" class="btn btn-primary">Изменить</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>   
}

@section pageScripts {
    <script>
        const hideCardElement = $('#hideGraphicsCardID');
        const showCardElement = $('#showGraphicsCardID');
        const cardElement = $('.card');
        
        const interval = 500;
        
        hideCardElement.click(function(){
            hideCardElement.hide(interval);
            showCardElement.show(interval);
            cardElement.hide(interval);
        });
        
        showCardElement.click(function () {
            hideCardElement.show(interval);
            showCardElement.hide(interval);
            cardElement.show(interval);
        });
    </script>
 }